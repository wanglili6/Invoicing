<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.mtecc.mmp.invoicing.activity.purchase.PurchaseListActivity">

    <include layout="@layout/base_title" />

    <com.flyco.tablayout.SegmentTabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/income_segment_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        app:tl_bar_color="@color/color_white"
        app:tl_indicator_color="@color/colorPrimaryDark"
        app:tl_indicator_corner_radius="0dp"
        app:tl_tab_padding="20dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_white"
        app:tl_textUnselectColor="@color/colorPrimaryDark"
        app:tl_textsize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/income_switch_over_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
