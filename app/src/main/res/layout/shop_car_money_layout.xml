<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_select_sure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/shop_car" />

        <TextView
            android:padding="5dp"
            android:id="@+id/img_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_shop_car"
            android:background="@mipmap/red_bg"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView

        android:id="@+id/tv_select_names"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:drawableLeft="@mipmap/money_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_money_color"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/xian_color" />

    <TextView
        android:id="@+id/tv_select_sure"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="选好了"
        android:textColor="@color/color_white"
        android:textSize="16sp" />
</LinearLayout>