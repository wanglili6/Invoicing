<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_doucument_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_doucument_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_doucument_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_doucument_see"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/see_doucument"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="查看"
                android:textColor="#009688"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_doucument_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/edit_doucument"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="编辑"
                android:textColor="#1296db"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_doucument_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/del_doucument"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="删除"
                android:textColor="#d81e06"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>